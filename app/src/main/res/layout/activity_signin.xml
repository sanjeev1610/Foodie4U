<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/food"
        tools:context=".SigninActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
    >
        <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edit_text_phone_signin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:text="7675022836"
                android:inputType="phone"
                android:textSize="34sp"
                app:met_baseColor="@android:color/white"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="20"
                app:met_primaryColor="@android:color/white"
                app:met_singleLineEllipsis="true" />

        <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edit_text_password_signin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textColorHint="@android:color/white"
                android:textColor="@android:color/white"
                android:text="123"
                android:inputType="textPassword"
                android:textSize="34sp"
                app:met_baseColor="@android:color/white"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="20"
                app:met_primaryColor="@android:color/white"
                app:met_singleLineEllipsis="true" />

        <com.rey.material.widget.CheckBox
                android:id="@+id/remember_cbd"
                style="@style/Material.Drawable.CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember me"
                android:gravity="center_vertical"
                android:textColor="@android:color/white"
                app:cbd_strokeColor = "@android:color/white"

        />


    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"
    >
        <Button
                android:id="@+id/signin_activity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/btnSignActive"
                android:text="Signin"
                android:textSize="32sp"
                android:textColor="@android:color/white"
        />


    </LinearLayout>



</RelativeLayout>